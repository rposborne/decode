  "version": "0.2.0",
  "configurations": [        
        {
            "name": "Chrome Attach",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080/public/",
            "port": 9223,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/src",
            "runtimeArgs": [
                "--new-window",
                "--remote-debugging-port=9223"
            ]
        }
    ]
}